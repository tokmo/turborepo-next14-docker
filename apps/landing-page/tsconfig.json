{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tp/typescript-config/base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.mjs"
  ],
  "exclude": ["node_modules"]
}
